{
    "name": "uv",
    "dockerComposeFile": "../.devcontainer/docker-compose.yml",
    "service": "vscode",
    "runServices": [
        "vscode"
    ],
    "workspaceFolder": "/workspace",
    "remoteEnv": {
        "GIT_SSL_NO_VERIFY": "1"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "anthropic.claude-code",
                "aws-amplify.aws-toolkit",
                "github.copilot",
                "github.copilot-chat",
                "googlecloudtools.cloudcode",
                "charliermarsh.ruff",
                "kevinrose.vsc-python-indent",
                "mosapride.zenkaku",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "njpwerner.autodocstring",
                "redhat.vscode-yaml",
                "shardulm94.trailing-spaces",
                "tamasfe.even-better-toml",
                "yzhang.markdown-all-in-one",
                "exiasr.hadolint",
                "usernamehw.errorlens",
                "oderwat.indent-rainbow",
                "pkief.material-icon-theme",
                "eamodio.gitlens"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "dummy",
        "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv",
        "UV_INSECURE_HOST": "github.com",
        "RUSTLS_PLATFORM_VERIFIER": "0"
    },
    "postCreateCommand": "bash /workspace/first-time-dev-setup.sh",
    "postStartCommand": "uv run pre-commit install",
    "remoteUser": "vscode"
}
